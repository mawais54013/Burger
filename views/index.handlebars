<h1 class="uk-heading-line uk-text-center"><span>Video Game Organizer</span></h1>
<br>
<br>
{{!-- FYI i do not like handlebars  --}}
<div class="uk-child-width-expand@s uk-text-center" uk-grid>
    <div>
        <div class="uk-card uk-card-primary uk-card-body">
            <h2>Games that are great</h2>

            <ul>
                {{!-- for each game if it is not bad then it will be shown here  --}}
                {{#each burgers}}
                        {{#unless bad}}
                            <li>
                            {{name}}
                            {{!-- this is the button where the user can change the option of the game from good to bad  --}}
                            {{> burgers/burgers-block}}
                            </li>
                        {{/unless}}
                {{/each}}
                
            </ul>
        </div>
    </div>
    <div>
        {{!-- used to create a new game entry --}}
        <div class="uk-card uk-card-secondary uk-card-body">
            <h2>Add a Game</h2>
            <form class="create-form" action="/newGame" method="POST">

            <div class="form-group">
                <label for="gameName">Game Name:</label>
                <input type="text" id="gameName" name="newGame"> 
            </div>

             <div class="form-group">
                 {{!-- radio buttons used to select which game is good or bad  --}}
                <input type="radio" name="bad" value="1" checked> Bad!<br>
                <input type="radio" name="bad" value="0"> Good
            </div> 

            <button type="submit">Add Game</button>
            </form>

        </div>
    </div>
    <div>
        <div class="uk-card uk-card-primary uk-card-body">
            <h2>Games that are terrible </h2>
{{!-- this is where the games that are bad located  --}}
            <ul>
            {{#each burgers}}  
            {{!-- if a game is bad then put here  --}}
                    {{#if bad}}
                        <li>
                        {{name}}
                        {{!-- option to change game from bad to good  --}}
                       {{> burgers/burger-block}}
                        </li>
                    {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
</div>



